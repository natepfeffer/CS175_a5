	<!-- Three-sided mirror box -->
	<!-- Left wall mirror -->
	<transblock>
		<scale x="0.1" y="2" z="3"/>
		<translate x="-10" y="0" z="0"/>
		<object type="primitive" name="cube">
			<diffuse r="0." g="0." b="0."/>
			<reflective r="0.95" g="0.95" b="0.95"/>
		</object>
	</transblock>

	<!-- Back wall mirror -->
	<transblock>
		<scale x="3" y="2" z="0.1"/>
		<translate x="0" y="0" z="-10"/>
		<object type="primitive" name="cube">
			<diffuse r="0." g="0." b="0."/>
			<reflective r="0.95" g="0.95" b="0.95"/>
		</object>
	</transblock>

	<!-- Bottom floor mirror -->
	<transblock>
		<scale x="3" y="0.1" z="3"/>
		<translate x="0" y="-10" z="0"/>
		<object type="primitive" name="cube">
			<diffuse r="0." g="0." b="0."/>
			<reflective r="0.95" g="0.95" b="0.95"/>
		</object>
	</transblock>

	<!-- Dragon -->
	<transblock>
		    <scale x=".5" y=".5" z=".5"/>
		    <translate x="0" y="0" z="1"/>
			<rotate x="1" y="0" z="0" angle="115"/>
			<object type="tree">

			<!-- main cylinder frame for head -->
			<transblock>
				<object type="primitive" name="cylinder" >
				<diffuse r="1" g="0" b="1"/>
      			<shininess value="15"/>
      			<reflective r="0.8" g="0.6" b="0.6"/>
				</object>
			</transblock>

			<!-- eyes -->
			<transblock>
				<scale x=".5" y=".65" z=".25"/>
	    		<translate x=".75" y="-.15" z="-.75"/>
				<object type="primitive" name="sphere" >
				<diffuse r="1" g="0" b="0"/>
      			<reflective r="0.8" g="0.6" b="0.6"/>
      			<shininess value="15"/>
				</object>
			</transblock>
			<transblock>
				<scale x=".5" y=".65" z=".25"/>
	    		<translate x="-.75" y="-.15" z="-.75"/>
				<object type="primitive" name="sphere" >
				<diffuse r="1" g="0" b="0"/>
      			<shininess value="15"/>
      			<reflective r="0.8" g="0.6" b="0.6"/>
				</object>
			</transblock>

			<!-- head joint -->
			<transblock>
	    		<translate x="0" y="-0.5" z="0"/>
				<object type="tree">

				<!-- main sphere -->
				<transblock>
					<object type="primitive" name="sphere" >
					<diffuse r="1" g="0" b="1"/>
      				<shininess value="15"/>
      				<reflective r="0.8" g="0.6" b="0.8"/>
					</object>
				</transblock>

				<!-- horns -->
				<transblock>
	    			<translate x="0" y="-0.5" z="-.75"/>
		    		<scale x=".2" y="1." z="1.5"/>
	    			<rotate x="1" y="0" z="0" angle="-145"/>
					<object type="primitive" name="cone" >
					<diffuse r="0" g="0" b="1"/>
      				<shininess value="15"/>
      				<reflective r="0.6" g="0.6" b="0.8"/>
					</object>
				</transblock>

				<!-- neck -->
				<transblock>
	    			<rotate x="1" y="0" z="0" angle="-90"/>
	    			<translate x="0" y="-1." z="0"/>
		    		<scale x="1." y="2." z="1."/>
					<object type="primitive" name="cylinder" >
					<diffuse r="1" g="0" b="1"/>
      				<shininess value="15"/>
      				<reflective r="0.8" g="0.6" b="0.8"/>
					</object>
				</transblock>
				</object>
			</transblock>

			<!-- cone for tip of nose -->
			<transblock>
	    		<translate x="0" y="1" z="0"/>
				<object type="primitive" name="cone" >
				<diffuse r="1" g="0" b="1"/>
      			<shininess value="15"/>
      			<reflective r="0.8" g="0.6" b="0.8"/>
				</object>
			</transblock>
			</object>
	</transblock>
    </object>

</scenefile>

